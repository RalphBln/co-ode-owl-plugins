void AdditiveExpression(Set<String> variables) #void : {Token op =null;}
{
	
  (
  	 MultiplicativeExpression(variables) (  op=<SUM> {
    	jjtThis.setSum(op == null || op.image.compareTo("+")==0);
    	
    } AdditiveExpression(variables) )*
    
    
    
